${color FFB600}WIC ${color CCCCCC}${diskio /dev/md127p1}${goto 400}${exec df -h | grep /dev/md127p1 | awk '{print $2,$5}'}${goto 500}${#464646}${fs_bar 12,82 /home}${goto 300}${color FFB600}blufor ${color CCCCCC}${diskio /media/shed/blufor}${goto 100}${exec df -h | grep /media/shed/blufor | awk NR==1'{print $2,$5}'}${goto 200}${#464646}${fs_bar 12,82 /media/shed/blufor}
${diskiograph_read /dev/md127p1 12,140 00FF00 002800}${diskiograph_write /dev/md127p1 12,140 FF0000 280000}${goto 300}${color 404040}${diskiograph_read /media/shed/blufor 12,140 00FF00 002800}${diskiograph_write /media/shed/blufor 12,140 FF0000 280000}${color 404040}
